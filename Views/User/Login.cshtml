@model BetterWorld.Models.UserViewModel

@{
    ViewData["Title"] = "Login";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Form.css">
<link rel="stylesheet" href="~/css/Card.css">

<div class="e-card playing">
    <div class="image"></div>
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="infotop">
        <div class="form-container">
            <div class="heading">Login</div>
            <form asp-action="Login" method="post" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control input" placeholder="Username" required="" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control input" placeholder="Password"
                        required="" />
                </div>
                <input value="Login" type="submit" class="btn login-button" />
            </form>
            <p class="signin" style="font-family: raleway; font-weight:100;
             font-size: 15px; color: #211e1ef8;">
                Don't have an acount?
                <a href="~/User/Register">Register here</a>
            </p>

        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
